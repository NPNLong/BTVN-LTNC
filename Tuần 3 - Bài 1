#include <iostream>
#include <string>
#include <cstring>
using namespace std;

void swap(char &a, char &b){
    char c = a;
    a=b;
    b=c;
}

int main() {
	string a,b ; cin>>a>>b;
    int _a = a.size(), _b=b.size();
    
    cout<<_a<<' '<<_b<<'\n';
    cout<<a+b<<'\n';
    
    swap(a[0],b[0]);
    
    cout<<a<<' '<<b;
  
    return 0;
}
